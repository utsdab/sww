global proc jsUnlockTransforms (string $obj)
{
	// unlock the transforms on $obj
	$attrs = {	"t", "tx", "ty", "tz", "r", "rx", "ry", "rz", "s", "sx", "sy", "sz", "v"};
	for ($at in $attrs)
	{
		setAttr -l 0 ($obj + "." + $at);
	}
}
